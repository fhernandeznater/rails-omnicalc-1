<%
  @min = params.fetch("user_min").to_f
  @max = params.fetch("user_max").to_f
  @random_number = rand * (@max - @min) + @min
%>


<h1>Random Root Results</h1>

<dl>
  <dt>
    Minimum
  </dt>
  <dd>
    <%= @min %>
  </dd>


  <dt>
    Maximum
  </dt>
  <dd>
    <%= @max %>
  </dd>

  <dt>
    Random Number
  </dt>
  <dd>
    <%= @random_number %>
  </dd>

</dl>

<a href="/random/new">
  Calculate another random number
</a>
